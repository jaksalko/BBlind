<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#ffffff"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteY="105dp">


    <ImageView
        app:layout_constraintVertical_chainStyle="packed"
        android:id="@+id/pad1"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/img"
        app:layout_constraintHeight_percent="0.05"
        />

    <LinearLayout
        android:id="@+id/img"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:background="@android:drawable/editbox_background"
        app:layout_constraintBottom_toTopOf="@+id/pad2"
        app:layout_constraintHeight_percent="0.5"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pad1"
        app:layout_constraintWidth_percent="0.8" >

        <TextView
            android:layout_marginHorizontal="10dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.15"
            android:fontFamily="@font/bmx"
            android:textSize="25sp"
            android:textColor="#ff8f84"
            android:textStyle="bold"
            android:gravity="center_vertical"
            android:text="HOT!!"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e26d6d"/>
        <ListView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.85">

        </ListView>
    </LinearLayout>

    <ImageView
        android:id="@+id/pad2"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.05"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintTop_toBottomOf="@+id/img"
        app:layout_constraintBottom_toTopOf="@+id/Home_Apply"
        />

    <Button
        android:id="@+id/Home_Apply"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@android:drawable/editbox_background_normal"
        android:fontFamily="@font/bmx"
        android:text="신청하기"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/pad3"
        app:layout_constraintHeight_percent="0.15"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pad2"
        app:layout_constraintWidth_percent="0.8" />
    <ImageView
        android:id="@+id/pad3"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.05"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintTop_toBottomOf="@+id/Home_Apply"
        app:layout_constraintBottom_toTopOf="@+id/Home_Check_Apply"
        />

    <Button
        android:id="@+id/Home_Check_Apply"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@android:drawable/editbox_background_normal"
        android:gravity="center"
        android:onClick="CheckApply"
        android:fontFamily="@font/bmx"
        android:textSize="20dp"
        android:text="내 신청현황 보기"
        app:layout_constraintBottom_toTopOf="@+id/pad4"
        app:layout_constraintHeight_percent="0.15"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pad3"
        app:layout_constraintWidth_percent="0.8" />
    <ImageView
        android:id="@+id/pad4"
        app:layout_constraintHeight_percent="0.05"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintTop_toBottomOf="@+id/Home_Check_Apply"
        app:layout_constraintBottom_toBottomOf="parent"
        />
</android.support.constraint.ConstraintLayout>